<div class="container p-4">
    <div class="row">
        <div class="col-md-4 mx-auto">
            <div class="card">
                <div class="card-body">
                    <form action="/juegos/agregar" method="post" enctype="multipart/form-data">
                        <div class="form-group"><input class="form-control" type="text" name="nombre" placeholder="Nombre-Empresa" autofocus></div>
                        <div class="form-group"><textarea class="form-control" name="descripcion" placeholder="Descripcion" rows="3"></textarea></div>
                        <div class="form-group p-1">
                            <label class="form-label">Agregue una imagen de la empresa</label>
                            <div class="input-group mb-3">
                            <input type="file" class="form-control" name="imagen">
                        </div>
                        <div class="form-group"><textarea class="form-control" name="instrucciones" placeholder="Ubicación, Salario y Contrato" rows="3"></textarea></div>
                        <div class="form-group ">
                            <label class="form-label">¿Para que nivel esta recomendado?</label>
                            <input type="range" class="form-range" min="0" max="6" name="nivel">
                        </div>
                        <div class="form-group"><input class="form-control" type="text" name="vocabulario" placeholder="lenguaje de programacion requerido"</div>
                        <button class="btn btn-info col-12 mt-2">Añadir Empleo</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
