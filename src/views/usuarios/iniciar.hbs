<div class="row p-5">
    <div class="col-md-6 mx-auto">
        <div class="card">
            <div class="card-header text-center">
                <h1>Iniciar Sesion</h1>
            </div>
            <div class="card-body">
                <form action="/usuarios/iniciar" method="post">
                    <div class="form-group mt-2 p-1">
                        <input type="text" class="form-control" name="usuario_id" placeholder="Ingresa tu ID">
                    </div>
                    <div class="form-group mt-2 p-1">
                        <input type="password" class="form-control" name="contrasena" placeholder="Ingresa tu contraseña">
                    </div>
                    <button class="btn btn-success col-12 p-1 mt-2">
                        Iniciar sesión
                    </button>
                </form>
            </div>
        </div>
    </div>
</div>
